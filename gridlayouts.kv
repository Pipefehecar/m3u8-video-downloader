<MyButton@Button>:
    font_size: 30
    font_name: "Comic"
    size: 250, 50
    # padding: (50, 50)
    spacing: 6

<MyLabel@Label>:
    font_size: 30
    font_name: "Comic"

<MyGridLayout>
    name:name
    url:url
    GridLayout:
        cols:1
        size:root.width,root.height
        GridLayout:
            spacing: 6
            cols: 2
            size: 700, 100
            size_hint: None, None

            MyLabel:
                text: "Url"
            TextInput:
                id: url
                multiline: False

            MyLabel:
                text: "Name"
            TextInput:
                id: name
                multiline: False



    MyButton:
        text: "Descargar"
        on_press: root.download_courses()

    MyButton:
        right: self.parent.right
        background_color: (250/255, 45/255, 30/255,1)
        text: "Cancelar"


